<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.vbastien.mycoincollector">

    <application
        android:name=".controller.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controller.country.CountryActivity"
            android:label="@string/country_label"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".controller.splashscreen.SplashScreenActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controller.coin.CoinAddActivity"
            android:label="@string/add_coin_label"/>
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:label="@string/edit_picture"
            android:theme="@style/CropperTheme"/>
    </application>

</manifest>